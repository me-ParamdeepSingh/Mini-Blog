<%- include('user_layouts/header') %>
  <script src="/css/jquery-3.6.4.min.css"></script>

  <div class="container">


    <form action="/user/post/add" method="post" class="add-form" id="example" enctype="multipart/form-data">
      <div class="row">
        <div class="mt-4 col-lg-6">
          <label for="text-input">Title</label>
          <input type="text" class="form-control mt-2" name="title" id="inputName" placeholder="Enter text"
            onkeyup="validate_name()">
          <small id="nameValidationMsg" class="form-text text-danger"></small>
        </div>

        <div class="mt-4 col-lg-6">
          <label for="text-input">Slug</label>
          <input type="text" class="form-control mt-2" name="slug" id="inputName" placeholder="Enter text"
            onkeyup="validate_name()">
          <small id="nameValidationMsg" class="form-text text-danger"></small>
        </div>

        <div class="mt-4 col-lg-12">
          <label for="email-input">Description</label><br>
          <textarea name="description" class="p-1" cols="80" rows="10"></textarea>
          <small id="emailValidationMsg" class="form-text text-danger"></small>
        </div>

        <div class="mt-4 col-lg-6">

          <div class="form-check mx-2">
            <label for="formFile" class="form-label">Upload image</label>
            <input class="form-control" type="file" id="formFile" name="image">
            </label>
          </div>

        </div>

        <div class="mt-4 col-lg-6">
          <label>Status</label>
          <div class="d-flex mt-2">
            <div class="form-check mx-2">
              <input class="form-check-input" type="radio" name="status" id="active" value="Active" checked>
              <label class="form-check-label" for="active">
                Active
              </label>
            </div>
            <div class="form-check mx-2">
              <input class="form-check-input" type="radio" name="status" id="inactive" value="Inactive">
              <label class="form-check-label" for="inactive">
                Inactive
              </label>
            </div>
          </div>
        </div>

      </div>

      <button type="submit" class="btn btn-primary mt-4 submit-btn" onmouseover="check_form()">Submit</button>

    </form>

  </div>

  <%- include('user_layouts/footer') %>