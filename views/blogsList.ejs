<%- include('user_layouts/header') %>
  <!-- table   -->
  <div class="container">
    <div class="row my-4">
      <div class="col-lg-12">
        <div class="table-responsive">
          <table class="table text-center my-3">
            <thead>
              <tr class="table-dark">
                <th scope="col">Id</th>
                <th scope="col">Featured Image</th>
                <th scope="col">Title</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% allBlogs.forEach((item)=>{ %>

                <tr class="align-middle">
                  <td data-label="Id">
                    <%= item.id %>
                  </td>
                  <td data-label="Featured Image"><img src="/images/blog/<%= item.image %>" alt="" width="40px"
                      height="40px">
                  </td>
                  <td data-label="Title">
                    <%= item.title %>
                  </td>
                  <td data-label="Actions">
                    <a href="/user/post/view/<%= item.id %>" class="mx-1"><i class="fa fa-eye"
                        aria-hidden="true"></i></a>
                    <a href="/user/post/update/<%= item.id %>" class="mx-1 text-success"><i class="fa fa-pencil-square-o"
                        aria-hidden="true"></i></a>
                    <a href="/user/post/delete/<%= item.id %>" class="mx-1 text-danger"><i class="fa fa-trash-o"
                        aria-hidden="true"></i></a>
                  </td>
                </tr>



                <% }) %>



            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%- include('user_layouts/footer') %>